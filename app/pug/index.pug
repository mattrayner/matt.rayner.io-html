extends ./layout/base

block append stylesheets
    link(rel='stylesheet', href=baseUrl+'css/index.min.css')

block content
    section#home-slide.primary-background
        .background
            ul#scene
                li.layer.layer-1(data-depth="0.5")
                    .image
                li.layer.layer-2(data-depth="0.75")
                    .image
                li.layer.layer-3(data-depth="1.0")
                    .image
            .overlay
        .content
            h1.show-for-sr Matt Rayner | Full stack polyglot tech lead in London | I design and develop beautiful things for print and digital
            a(href=baseUrl)
                img(src=baseUrl+'assets/images/logo-full.svg', alt='Matt Rayner Logo')
            p Full-stack polyglot tech lead in London
        | <svg class="arrows"><path class="a1" d="M0 0 L30 32 L60 0"></path><path class="a2" d="M0 20 L30 52 L60 20"></path><path class="a3" d="M0 40 L30 72 L60 40"></path></svg>
    section#about-me.row-padding
        .row
            .large-10.large-offset-1.columns
                img.border-fade.rounded-image.about-me-image(src=baseUrl+'mattrayner.jpg',srcset=baseUrl+'mattrayner.jpg 1x, '+baseUrl+'mattrayner@2x.jpg 2x, '+baseUrl+'mattrayner@3x.jpg 3x',alt='Picture of Matt Rayner')
                .about-me__content
                    a#mainContent(name='mainContent')
                    h2 About Me
                    p I’m Matt Rayner, a talented and dedicated full stack, polyglot tech lead. I’m looking for a challenging environment to test and improve my skills. I love learning new things and am an early adopter of bleeding edge technologies. Outside of work I’m involved in volunteering and a number of side projects. Everything from training students in multimedia and design skills, through to #[a(href='http://give.cat/',target='_blank') Give Cat] - a bookmarklet that replaces all the images on a website with pictures of cats (what more could you want, right?).

                    - if (roles.length)
                        - role = roles[0]
                        h3 Currently
                        .media-object
                            .media-object-section.show-for-small-only
                                a(href=role.company.url)
                                    img.company-avatar.extra-small.rounded-image(src='https://twitter.com/' + role.company.twitter + '/profile_image?size=original', alt=role.company.name + ' avatar')
                            .media-object-section.hide-for-small-only
                                a(href=role.company.url)
                                    img.company-avatar.small.rounded-image(src='https://twitter.com/' + role.company.twitter + '/profile_image?size=original', alt=role.company.name + ' avatar')
                            .media-object-section
                                h4= role.title
                                p.hide-for-small-only
                                    a(href=role.company.url)= role.company.name

                        h5 Previously
                        - for(i = 1; i < roles.length; i++)
                            - role = roles[i]
                            - if(!role.duplicate)
                                a.pad(href='/about#experience'+i)
                                    img.company-avatar.extra-small.rounded-image(src='https://twitter.com/' + role.company.twitter + '/profile_image?size=original', alt=role.title + ' at ' + role.company.name)


                    .controls
                        a.control(role='button', href=baseUrl + 'about')
                            span Read more about me
                        a.control(role='button', href=baseUrl + 'matthew-rayner-tech-lead-cv.pdf', target='_blank', download=true) Get my CV
    section#skills.row-padding
        .row
            .large-10.large-offset-1.columns
                h2#skills-heading Skills
        .row
            .large-10.medium-offset-1.columns
                .row
                    .large-12.columns
                        .button-group.filter-button-group
                            button.button(data-filter='*') All
                            each type in types
                                button.button(data-filter='.'+type.slug)= type.title
                .row
                    .large-12.columns
                        .skills__content
                            section(aria-labelledby='skills-heading')
                                ul.skills(aria-labelledby='skills-heading')
                                    each skill in skills.major
                                      li(class=skill.types+' skill major')
                                        .title= skill.title

                                    each skill in skills.standard
                                      li(class=skill.types+' skill')
                                        .title= skill.title

                                .clearfix

block append scripts
    script(src=baseUrl+'js/index.min.js', defer=true)
