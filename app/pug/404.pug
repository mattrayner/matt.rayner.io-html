extends ./layout/base

block variables
    - var title = 'Matt Rayner | Oops, Page Not Found'
    - var socialTitle = 'Matt Rayner - Page Not Found'

block append stylesheets
    link(rel='stylesheet', href=baseUrl+'css/index.css')

block content
    section#home-slide.primary-background
        .background
            ul#scene
                li.layer.layer-1(data-depth="0.5")
                    .image
                li.layer.layer-2(data-depth="0.75")
                    .image
                li.layer.layer-3(data-depth="1.0")
                    .image
            .overlay
        .content
            h1 Oops, page not found
            p It's not you, it's me... There's no place like #[a(href=baseUrl) home].


block append scripts
    script(src=baseUrl+'js/index.min.js', defer=true)